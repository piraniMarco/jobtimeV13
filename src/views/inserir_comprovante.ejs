<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inserir Comprovante</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            text-align: center;
        }
        .form-container {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        .form-actions {
            text-align: center;
        }
        .form-actions button {
            padding: 10px 20px;
            margin: 5px;
        }
        #success-message {
            display: none;
            width: 50%;
            margin: 20px auto;
            padding: 10px;
            border: 1px solid #4CAF50;
            color: #4CAF50;
            background-color: #dff0d8;
            text-align: center;
            border-radius: 5px;
        }
        #error-message {
            display: none;
            width: 50%;
            margin: 20px auto;
            padding: 10px;
            border: 1px solid #f44336;
            color: #f44336;
            background-color: #fdd;
            text-align: center;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Inserir Comprovante</h1>
        <% if (success) { %>
            <div id="success-message">Comprovante registrado com sucesso</div>
        <% } %>
        <div class="form-container">
            <form id="comprovante-form" action="/comprovantes/inserir" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="descricao">Descrição:</label>
                    <input type="text" id="descricao" name="descricao" required>
                </div>
                <div class="form-group">
                    <label for="tipoDespesaId">Tipo de Despesa:</label>
                    <select id="tipoDespesaId" name="tipoDespesaId" required>
                        <% tiposDeDespesa.forEach(tipo => { %>
                            <option value="<%= tipo.id %>"><%= tipo.nome %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="clienteId">Cliente:</label>
                    <select id="clienteId" name="clienteId" required>
                        <% clientes.forEach(cliente => { %>
                            <option value="<%= cliente.id %>"><%= cliente.razaoSocial %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="consultorId">Consultor:</label>
                    <select id="consultorId" name="consultorId" required>
                        <% consultores.forEach(consultor => { %>
                            <option value="<%= consultor.id %>"><%= consultor.nome %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="data">Data:</label>
                    <input type="date" id="data" name="data" required>
                </div>
                <div class="form-group">
                    <label for="valor">Valor da Despesa (R$):</label>
                    <input type="number" id="valor" name="valor" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="comprovante">Comprovante:</label>
                    <input type="file" id="comprovante" name="comprovante" required>
                </div>
                <div class="form-actions">
                    <button type="submit">Inserir Comprovante</button>
                    <button type="button" onclick="window.location.href='/menu'">Voltar ao Menu</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
