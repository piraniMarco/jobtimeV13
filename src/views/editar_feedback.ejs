<!DOCTYPE html>
<html>
<head>
    <title>Editar Feedback</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            text-align: center;
        }
        .form-container {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        .form-actions {
            text-align: center;
        }
        .form-actions .button-group {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Editar Feedback</h1>
        <div class="form-container">
            <form id="editar-feedback-form" action="/editar-feedback/<%= feedback.id %>" method="POST">
                <div class="form-group">
                    <label for="titulo">TÃ­tulo:</label>
                    <input type="text" id="titulo" name="titulo" value="<%= feedback.titulo %>" required>
                </div>
                <div class="form-group">
                    <label for="data">Data:</label>
                    <input type="date" id="data" name="data" value="<%= feedback.data.toISOString().split('T')[0] %>" required>
                </div>
                <div class="form-group">
                    <label for="clienteId">Cliente:</label>
                    <select id="clienteId" name="clienteId" required>
                        <% clientes.forEach(cliente => { %>
                            <option value="<%= cliente.id %>" <%= feedback.clienteId === cliente.id ? 'selected' : '' %>><%= cliente.razaoSocial %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="consultorId">Consultor:</label>
                    <select id="consultorId" name="consultorId" required>
                        <% consultores.forEach(consultor => { %>
                            <option value="<%= consultor.id %>" <%= feedback.consultorId === consultor.id ? 'selected' : '' %>><%= consultor.nome %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="texto">Feedback:</label>
                    <textarea id="texto" name="texto" rows="10" required><%= feedback.texto %></textarea>
                </div>
                <div class="form-actions button-group">
                    <button type="submit">Salvar</button>
                    <button type="button" onclick="window.location.href='/feedback/pesquisar'">Cancelar</button>
                    <button type="button" onclick="window.location.href='/menu'">Voltar ao Menu</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
